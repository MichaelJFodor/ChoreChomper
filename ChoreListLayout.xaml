<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChoreChoper.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Chore name:" FontSize="Large"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button Text="Add Chore" Clicked="buttonAddChore" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"></Button>
            <Button Text="View Chores" Clicked="buttonGetTaskList" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>