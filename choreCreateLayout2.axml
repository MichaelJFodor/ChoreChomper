<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<Toolbar
		android:minHeight="25px"
		android:background="?android:attr/colorPrimary"
		android:minWidth="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/createChoreToolbar" 
		android:title ="Create Chore">
		
		<Button
			android:text="â—„ Back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:id="@+id/buttonCreateChoreToChoreList" />
	</Toolbar>
	<TextView
		android:text="Chore Name"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="36.0dp"
		android:minWidth="25px"
		android:minHeight="25px"
		android:gravity="bottom"
		android:textAlignment="gravity"
		android:layout_below="@+id/buttonCreateChoreToChoreList"
		android:id="@+id/textNewChoreName" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textNewChoreName"
		android:id="@+id/editNewChoreName" />
	<TextView
		android:text="Assigned User"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/editNewChoreName"
		android:id="@+id/textNewChoreAssignment" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textNewChoreAssignment"
		android:id="@+id/editNewChoreAssignment" />
	<TextView
		android:text="Chore Deadline"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/editNewChoreAssignment"
		android:id="@+id/textNewChoreDeadline" />
	<EditText
		android:inputType="date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textNewChoreDeadline"
		android:id="@+id/dateNewChoreDeadline" />
	<TextView
		android:text="Priority"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/dateNewChoreDeadline"
		android:id="@+id/textNewChorePriority" />
	<CheckBox
		android:text=""
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/textNewChorePriority"
		android:layout_below="@id/dateNewChoreDeadline"
		android:id="@+id/checkNewChorePriority" />
	<Button
		android:text="Create Chore"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:id="@+id/buttonAddChore"
		
		 />

</LinearLayout>
